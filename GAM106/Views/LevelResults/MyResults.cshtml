@model IEnumerable<GAM106.Models.LevelResult>

@{
    ViewData["Title"] = "My Results";
}

<h1>My Results</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Report new result</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Level</th>
            <th>Score</th>
            <th>Completed At</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var r in Model)
    {
        <tr>
            <td>@r.Level?.Title</td>
            <td>@r.Score</td>
            <td>@r.CompletedAt.ToLocalTime().ToString("g")</td>
        </tr>
    }
    </tbody>
</table>
